{
  "info": {
    "name": "AI Email Assistant",
    "_postman_id": "b3a2c99c-1111-4a2b-8c7a-aaaaaaaaaaaa",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{base}}/healthz"
      }
    },
    {
      "name": "Ingest Pull",
      "request": {
        "method": "POST",
        "url": "{{base}}/ingest/pull?user_upn={{pilot_upn}}"
      }
    },
    {
      "name": "Query",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"question\": \"Scadenze fatture questa settimana?\", \"k\": 8}"
        },
        "url": "{{base}}/query"
      }
    },
    {
      "name": "Summarize",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"scope\": \"last_24h\", \"k\": 20, \"instruction\": \"Riassumi in 6 bullet azionabili.\"}"
        },
        "url": "{{base}}/summarize"
      }
    },
    {
      "name": "Assistant Chat",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"message\": \"prepara un recap vendite\", \"upn\": \"{{pilot_upn}}\", \"k_email\": 6, \"k_kb\": 6}"
        },
        "url": "{{base}}/assistant/chat"
      }
    }
  ],
  "variable": [
    {
      "key": "base",
      "value": "http://localhost:8000"
    },
    {
      "key": "pilot_upn",
      "value": "utente@dominio.com"
    }
  ]
}